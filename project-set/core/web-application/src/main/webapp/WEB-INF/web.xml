<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="3.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    
    <display-name>Power API Root Web Application</display-name>
    <description>Proxies for fun</description>
        
    <!-- This tells Power API where to look for its configuraitons -->
    <context-param>
        <param-name>powerapi-config-directory</param-name>
        <param-value>/etc/powerapi</param-value>
    </context-param>
    
    <listener>
        <display-name>Power API Context Loader</display-name>
        <listener-class>com.rackspace.papi.service.context.PowerApiContextManager</listener-class>
    </listener>

    <!-- Filters -->
    <filter id="power-api-filter">
        <filter-name>power-api-filter</filter-name>
        <filter-class>com.rackspace.papi.filter.PowerFilter</filter-class>
    </filter>
    
    <filter-mapping id="power-api-filter-mapping">
        <filter-name>power-api-filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>

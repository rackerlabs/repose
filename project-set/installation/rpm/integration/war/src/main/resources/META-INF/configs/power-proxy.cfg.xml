<?xml version="1.0" encoding="UTF-8"?>

<power-proxy xmlns="http://docs.rackspacecloud.com/power-api/system-model/v2.0">
  <service-domain id="repose">
    <service-domain-nodes>
      <node id="node1" hostname="localhost" http-port="8088"/>
    </service-domain-nodes>
    <filters>
      <!--
      <filter name="http-logging" />
      <filter name="header-id-mapping" />
      -->
      <filter name="default-router"/>
    </filters>
    <destinations>
      <endpoint id="openrepose" protocol="http" hostname="www.openrepose.org" root-path="/" port="80" default="true"/>
    </destinations>
  </service-domain>
</power-proxy>
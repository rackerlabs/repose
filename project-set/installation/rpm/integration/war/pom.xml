<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.rackspace.repose.installation.rpm.integration</groupId>
        <artifactId>integration</artifactId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>

    <groupId>com.rackspace.repose.installation.rpm.integration.war</groupId>
    <artifactId>war</artifactId>
    <version>2.0.0-SNAPSHOT</version>

    <name>Repose - Cloud Integration WAR RPM</name>

    <description>
        Module for the WAR RPM.
    </description>

    <packaging>pom</packaging>

    <profiles>
        <profile>
            <id>Build ROOT Web Application RPM</id>

            <activation>
                <property>
                    <name>build-system-packages</name>
                </property>
            </activation>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>rpm-maven-plugin</artifactId>

                        <configuration>

                            <name>repose-war</name>

                            <!-- _tmppath is not set correctly on al OSs so it is forced here -->
                            <defineStatements>
                                <defineStatement>_tmppath /tmp</defineStatement>
                            </defineStatements>

                            <mappings>
                                <mapping>
                                    <directory>/var/lib/tomcat7/webapps</directory>
                                    <username>tomcat</username>
                                    <groupname>tomcat</groupname>
                                    <filemode>755</filemode>

                                    <sources>
                                        <source>
                                            <location>
                                                ${project.build.directory}/../../../../../core/web-application/target/ROOT.war
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>

                                <mapping>
                                    <directory>/etc/repose/</directory>
                                    <username>tomcat</username>
                                    <groupname>tomcat</groupname>
                                    <filemode>755</filemode>

                                    <sources>
                                        <source>
                                            <location>
                                                ../war/src/main/resources/META-INF/configs/container.cfg.xml
                                            </location>
                                        </source>
                                        <source>
                                            <location>
                                                ../war/src/main/resources/META-INF/configs/power-proxy.cfg.xml
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>
                            </mappings>

                            <postinstallScriptlet>
                                <script>
                                    mkdir "/var/repose/logs/" -p -m 765;
                                    mkdir "/usr/share/repose/filters" -p -m 755;
                                    chown tomcat:tomcat /var/repose /usr/share/repose -R;
                                </script>
                            </postinstallScriptlet>

                            <postremoveScriptlet>
                                <script>
                                    rm -rf /var/repose /usr/share/repose/;
                                </script>
                            </postremoveScriptlet>

                            <requires>
                                <require>java-1.6.0-openjdk</require>
                                <require>tomcat7</require>
                            </requires>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
<?xml version="1.0" encoding="UTF-8"?>

<client-auth xmlns="http://docs.rackspacecloud.com/power-api/client-auth/v1.0">
    <openstack-auth delegatable="true" xmlns="http://docs.openrepose.org/power-api/client-auth/os-ids-auth/v1.0">
        <identity-service username="admin_username" password="admin_password" uri="http://auth-n02.dev.us.ccp.rackspace.net/v2.0/" />

        <client-mapping id-regex=".*/servers/(\w*)/.*"/>
    </openstack-auth>

    <white-list>
        <uri-pattern uri-id="wadl" uri-regex="[^=]/application\.wadl$" />    
    </white-list>
</client-auth>
<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>TokenServlet</servlet-name>
        <servlet-class>com.rackspace.papi.mocks.auth.TokenServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name> GetGroupsServlet</servlet-name>
        <servlet-class>com.rackspace.papi.mocks.auth.GetGroupsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LimitsServlet</servlet-name>
        <servlet-class>com.rackspace.papi.mocks.auth.Limits</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LandingServlet</servlet-name>
        <servlet-class>com.rackspace.papi.mocks.auth.LandingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>KeyStoneTokenServlet</servlet-name>
        <servlet-class>com.rackspace.papi.mocks.auth.KeyStoneTokenServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetTokensServlet</servlet-name>
        <servlet-class>com.rackspace.papi.mocks.auth.GetTokensServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAdapter</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAdapter</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TokenServlet</servlet-name>
        <url-pattern>/token/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LandingServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LimitsServlet</servlet-name>
        <url-pattern>/cmarin1/limits/*</url-pattern>
        <url-pattern>/limits/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetGroupsServlet</servlet-name>
        <url-pattern>/users/usertest4/groups/*</url-pattern>
        <url-pattern>/users/usertest1/groups/*</url-pattern>
        <url-pattern>/users/usertest2/groups/*</url-pattern>
        <url-pattern>/users/cmarin1/groups/*</url-pattern>
        <url-pattern>/users/usertest3/groups/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>KeyStoneTokenServlet</servlet-name>
        <url-pattern>/keystone/token/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetTokensServlet</servlet-name>
        <url-pattern>/tokens</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
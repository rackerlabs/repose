<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>mockTokenServlet</servlet-name>
        <servlet-class>com.rackspace.tests.testSupport.mockTokenServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>mockGetGroupsServlet</servlet-name>
        <servlet-class>com.rackspace.tests.testSupport.mockGetGroupsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>limits</servlet-name>
        <servlet-class>com.rackspace.tests.testSupport.limits</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>landingServlet</servlet-name>
        <servlet-class>com.rackspace.tests.testSupport.landingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>mockKeyStoneTokenServlet</servlet-name>
        <servlet-class>com.rackspace.tests.testSupport.mockKeyStoneTokenServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetTokensServlet</servlet-name>
        <servlet-class>com.rackspace.tests.testSupport.GetTokensServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mockTokenServlet</servlet-name>
        <url-pattern>/token/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>landingServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>limits</servlet-name>
        <url-pattern>/cmarin1/limits/*</url-pattern>
        <url-pattern>/limits/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mockGetGroupsServlet</servlet-name>
        <url-pattern>/users/usertest4/groups/*</url-pattern>
        <url-pattern>/users/usertest1/groups/*</url-pattern>
        <url-pattern>/users/usertest2/groups/*</url-pattern>
        <url-pattern>/users/cmarin1/groups/*</url-pattern>
        <url-pattern>/users/usertest3/groups/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mockKeyStoneTokenServlet</servlet-name>
        <url-pattern>/keystone/token/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetTokensServlet</servlet-name>
        <url-pattern>/tokens</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>

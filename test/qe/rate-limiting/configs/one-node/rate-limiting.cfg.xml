<?xml version="1.0" encoding="UTF-8"?>
<rate-limiting datastore="local/default" xmlns="http://docs.rackspacecloud.com/repose/rate-limiting/v1.0">

  <request-endpoint uri-regex="/service/limits/" include-absolute-limits="true"/>

  <limit-group id="customer-limits " groups="customer" default="true">
    <limit uri="*" uri-regex=".*" http-methods="ALL" unit="SECOND" value="5"/>
  </limit-group>

</rate-limiting>
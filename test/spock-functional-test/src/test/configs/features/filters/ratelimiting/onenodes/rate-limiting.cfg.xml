<?xml version="1.0" encoding="UTF-8"?>
<rate-limiting datastore="local/default" xmlns="http://docs.rackspacecloud.com/repose/rate-limiting/v1.0">

    <request-endpoint uri-regex="/service/limits" include-absolute-limits="true"/>

    <limit-group id="customer-limits " groups="customer" default="true">
        <limit uri="/service/limits" uri-regex="/service/limits" http-methods="GET" unit="MINUTE" value="60"/>
        <limit uri="*" uri-regex=".*" http-methods="ALL" unit="MINUTE" value="5"/>
    </limit-group>

    <limit-group id="higher-limits" groups="higher test" default="false">
        <limit uri="*" uri-regex=".*" http-methods="GET" unit="MINUTE" value="30"/>
        <limit uri="*" uri-regex=".*" http-methods="POST" unit="HOUR" value="100"/>
        <limit uri="*" uri-regex=".*" http-methods="PUT" unit="DAY" value="50"/>
        <limit uri="*" uri-regex=".*" http-methods="DELETE" unit="DAY" value="50"/>
    </limit-group>

    <limit-group id="unlimited-limits" groups="unlimited" default="false">
    </limit-group>

    <limit-group id="multiregex" groups="multiregex" default="false">
        <limit uri="*" uri-regex="/endpoint1.*" http-methods="GET" unit="MINUTE" value="3"/>
        <limit uri="*" uri-regex="/endpoint2.*" http-methods="GET" unit="MINUTE" value="3"/>
        <limit uri="*" uri-regex="/endpoint3.*" http-methods="GET POST" unit="MINUTE" value="3"/>
        <limit uri="*" uri-regex="/endpoint4.*" http-methods="GET" unit="MINUTE" value="3"/>
        <limit uri="*" uri-regex="/endpoint5.*" http-methods="GET" unit="MINUTE" value="3"/>
        <limit uri="*" uri-regex=".*" http-methods="POST" unit="HOUR" value="100"/>
        <limit uri="*" uri-regex=".*" http-methods="PUT" unit="DAY" value="50"/>
        <limit uri="*" uri-regex=".*" http-methods="DELETE" unit="DAY" value="50"/>
    </limit-group>

    <limit-group id="all-limits" groups="all-limits" default="false">
        <limit uri="*" uri-regex=".*" http-methods="ALL" unit="HOUR" value="50"/>
    </limit-group>

    <limit-group id="multi-limits" groups="multi-limits" default="false">
        <limit uri="*" uri-regex="(.*)" http-methods="GET POST" unit="HOUR" value="1"/>
    </limit-group>

</rate-limiting>

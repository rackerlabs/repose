<?xml version="1.0" encoding="UTF-8"?>
<power-proxy xmlns="http://docs.rackspacecloud.com/power-api/system-model/v1.0">
    <host id="proxy" hostname="api-n01.yourdomain.com">
        <filters>
            <filter name="client-auth" />
            <filter name="versioning" />
            <filter name="dist-datastore" />
            <filter name="rate-limiting" />            
        </filters>
    </host>
    
    <host id="service-v1" hostname="api-n01.yourdomain.com" href="http://yourdomain.com/v1" />
    <host id="service-v2" hostname="api-n01.yourdomain.com" href="http://yourdomain.com/v2" />
</power-proxy>
<?xml version="1.0" encoding="UTF-8"?>

<system-model xmlns="http://docs.rackspacecloud.com/repose/system-model/v2.0">
  <repose-cluster id="repose">

    <nodes>
      <node id="proxy-n01" hostname="<%= node[:fqdn]%>" http-port="8890"/>
      <node id="proxy-n02" hostname="<%= node[:fqdn]%>" http-port="8891"/>
      <node id="proxy-n03" hostname="<%= node[:fqdn]%>" http-port="8892"/>
    </nodes>

    <filters>
        <filter name="client-auth" uri-regex="/test-uri-regex/non-tenanted-auth/.*" />
        <filter name="ip-identity" uri-regex="/test-uri-regex/.*" />
        <filter name="ip-identity" configuration="ip-identity2.cfg.xml" uri-regex="/test-uri-regex-q1/.*" />
        <filter name="translation" uri-regex="/translation/response/.*" />
        <filter name="translation" configuration="translation-request.cfg.xml" uri-regex="/translation/request/.*" />
        <filter name="translation" configuration="translation-multi.cfg.xml" uri-regex="/translation/multi/.*" />
        <filter name="translation" configuration="translation-request-docfalse.cfg.xml" uri-regex="/translation/requestdocfalse/.*" />
        <filter name="translation" configuration="translation-response-docfalse.cfg.xml" uri-regex="/translation/responsedocfalse/.*" />
        <filter name="translation" configuration="translation-json.cfg.xml" uri-regex="/translation/json/.*" />
        <filter name="default-router" uri-regex="/test-uri-regex/.*" />
        <filter name="default-router" uri-regex="/test-uri-regex-q1/.*" />
        <filter name="default-router" uri-regex="/translation/.*" />
        <filter name="dist-datastore"/>
        <filter name="translation" uri-regex='/translation/request-headers-query/.*' configuration="translation-request-headers-query.cfg.xml"/>
        <filter name="translation" uri-regex='/translation/response-headers-query/.*' configuration="translation-response-headers-query.cfg.xml"/>
        <filter name="compression" uri-regex="/compress/.*" />
        <filter name="translation" uri-regex="/compress-translate/.*" configuration="translation-compression.cfg.xml"/>
</filters>

    <destinations>
      <endpoint id="service" protocol="http" hostname="50.57.189.15" root-path="/" port="8080" default="true"/>
    </destinations>

  </repose-cluster>
</system-model>

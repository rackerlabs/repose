<system-model xmlns="http://docs.rackspacecloud.com/power-api/system-model/v1.0">

    <% for i in 1..@num_nodes.to_i %>
    <host id="proxy-n0<%= i %>" hostname="<%= node[:fqdn]%>" service-port="888<%= 6+i.to_i %>">
        <filters>
            <% @filter_list.each do |filter| -%>
            <filter name="<%= filter %>" />
            <% end -%>
        </filters>
    </host>
    <% end %>

    <host id="service" hostname="50.57.189.15" service-port="8080"/>
</system-model>

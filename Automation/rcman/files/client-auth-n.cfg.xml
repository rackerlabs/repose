<client-auth xmlns="http://docs.rackspacecloud.com/power-api/client-auth/v1.0">
  <rackspace-auth keystone-active="true" delegatable="false" xmlns="http://docs.rackspacecloud.com/power-api/client-auth/rs-auth-1.1/v1.0">
    <authentication-server uri="http://localhost:8080/_service/" username="auth" password="auth123"/>
    <account-mapping id-regex="/_v\d/([\w-]+)/?" type="CLOUD"/>
    <user-roles>
      <default>
        <roles>
          <role>sysadmin</role>
          <role>netadmin</role>
          <role>developer</role>
        </roles>
      </default>
      <user name="usertest1">
        <roles>
          <role>firstuser</role>
        </roles>
      </user>
      <user name="usertest2">
        <roles>
          <role>seconduser</role>
        </roles>
      </user>
      <user name="usertest3">
        <roles>
          <role>thirduser</role>
        </roles>
      </user>
      <user name="usertest4">
        <roles>
          <role>fourthuser</role>
        </roles>
      </user>
    </user-roles>
  </rackspace-auth>
</client-auth>

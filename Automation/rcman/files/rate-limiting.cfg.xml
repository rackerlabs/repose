<rate-limiting xmlns="http://docs.rackspacecloud.com/power-api/rate-limiting/v1.0">
  <request-endpoint include-absolute-limits="true" uri-regex="/_v\d/[^/]+/limits/?"/>
  <limit-group default="true" id="admin-limits" roles="Admin">
    <limit uri="/_v*" http-methods="GET" unit="MINUTE" value="3" uri-regex="/(_v\d/[^/]+).*"/>
  </limit-group>
  <limit-group id="customer-limits" roles="customer">
    <limit uri="/service/*" http-methods="GET" unit="MINUTE" value="3" uri-regex="/service/([^/]*).*"/>
  </limit-group>
  <limit-group id="testing-limits" roles="test">
    <limit uri="/service/*" http-methods="GET" unit="MINUTE" value="10" uri-regex="/service/([^/]*).*"/>
  </limit-group>
</rate-limiting>

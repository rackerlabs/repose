<?xml version="1.0" encoding="UTF-8"?>
<rate-limiting xmlns="http://docs.openrepose.org/repose/rate-limiting/v1.0">
    <request-endpoint uri-regex="/service2/limits" include-absolute-limits="true"/>

    <limit-group id="higher-limits" groups="higher test" default="false">
        <limit id="one" uri="/service/*" uri-regex="/service/(.*)" http-methods="GET" unit="MINUTE" value="30"/>
        <limit id="two" uri="/service/*" uri-regex="/service/(.*)" http-methods="POST" unit="HOUR" value="100"/>
        <limit id="three" uri="/service/*" uri-regex="/service/(.*)" http-methods="PUT" unit="DAY" value="50"/>
        <limit id="four" uri="/service/*" uri-regex="/service/(.*)" http-methods="DELETE" unit="DAY" value="50"/>
    </limit-group>

    <limit-group id="unlimited-limits" groups="unlimited" default="false"/>

    <limit-group id="customer-limits" groups="user customer" default="true">
        <limit id="customerone" uri="/service/limits" uri-regex="/service/limits" http-methods="GET" unit="MINUTE"
               value="1000"/>
        <limit id="customertwo" uri="/service/*" uri-regex="/service/(.*)" http-methods="GET" unit="MINUTE" value="3"/>
        <limit id="customerthree" uri="/service/*" uri-regex="/service/(.*)" http-methods="POST" unit="HOUR" value="10"/>
        <limit id="customerfour" uri="/service/*" uri-regex="/service/(.*)" http-methods="PUT" unit="DAY" value="5"/>
        <limit id="customerfive" uri="/service/*" uri-regex="/service/(.*)" http-methods="DELETE" unit="DAY" value="5"/>
    </limit-group>

    <limit-group id="reset-limits" groups="reset-limits" default="false">
        <limit id="resetone" uri="/service/limits" uri-regex="/service/limits" http-methods="GET" unit="MINUTE"
               value="1000"/>
        <limit id="resetfour" uri="/service2/makeput" uri-regex="/service2/makeput" http-methods="PUT" unit="DAY" value="5"/>
        <limit id="resetsix" uri="/service2/doget" uri-regex="/service2/doget" http-methods="GET" unit="SECOND" value="5"/>
    </limit-group>

    <limit-group id="unique" groups="unique" default="false">
        <limit id="uniqueone" uri="/service/\w*" uri-regex="/service/(&quot;.+&quot;)" http-methods="GET" unit="MINUTE"
               value="30"/>
        <limit id="uniquetwo" uri="/service/\s*" uri-regex="/service/(\w.*)" http-methods="POST" unit="HOUR" value="100"/>
        <limit id="uniquethree" uri="/service/\d*" uri-regex="/service/(.*)" http-methods="PUT" unit="DAY" value="50"/>
        <limit id="uniquefour" uri="/service/*" uri-regex="/service/(.*)" http-methods="DELETE" unit="DAY" value="50"/>
    </limit-group>

    <limit-group id="multiregex" groups="multiregex" default="false">
        <limit id="multiregexone" uri="/service/*" uri-regex="/service/(endpoint1.*)" http-methods="GET" unit="MINUTE" value="3"/>
        <limit id="multiregextwo" uri="/service/*" uri-regex="/service/(endpoint2.*)" http-methods="GET" unit="MINUTE" value="3"/>
        <limit id="multiregexthree" uri="/service/*" uri-regex="/service/(endpoint3.*)" http-methods="GET POST" unit="MINUTE"
               value="3"/>
        <limit id="multiregexfour" uri="/service/*" uri-regex="/service/(endpoint4.*)" http-methods="GET" unit="MINUTE"
               value="3"/>
        <limit id="multiregexfive" uri="/service/*" uri-regex="/service/(endpoint5.*)" http-methods="GET" unit="MINUTE"
               value="3"/>
        <limit id="multiregexsix" uri="/service/*" uri-regex="/service/(.*)" http-methods="POST" unit="HOUR" value="100"/>
        <limit id="multiregexseven" uri="/service/*" uri-regex="/service/(.*)" http-methods="PUT" unit="DAY" value="50"/>
        <limit id="multiregexeight" uri="/service/*" uri-regex="/service/(.*)" http-methods="DELETE" unit="DAY" value="50"/>
    </limit-group>

    <limit-group id="all-limits" groups="all-limits" default="false">
        <limit id="allone" uri="/service/*" uri-regex="/service/(.*)" http-methods="ALL" unit="HOUR" value="50"/>
    </limit-group>

    <limit-group id="all-limits-small" groups="all-limits-small" default="false">
        <limit id="smallone" uri="/service/*" uri-regex="/service/(.*)" http-methods="ALL" unit="MINUTE" value="3"/>
    </limit-group>

    <limit-group id="multi-limits" groups="multi-limits" default="false">
        <limit id="multione" uri="/service/*" uri-regex="/service/(.*)" http-methods="GET POST" unit="HOUR" value="1"/>
    </limit-group>

    <limit-group id="query-limits" groups="query-limits" default="false">
        <limit id="queryone" uri="/service2/limits" uri-regex="/service2/limits" http-methods="GET" unit="HOUR" value="1"/>
    </limit-group>

    <limit-group id="no-limit" groups="no-limit" default="false">
        <limit id="test-no-limit" uri="" uri-regex="/repose/.*" http-methods="ALL" value="0" unit="DAY" />
    </limit-group>
</rate-limiting>

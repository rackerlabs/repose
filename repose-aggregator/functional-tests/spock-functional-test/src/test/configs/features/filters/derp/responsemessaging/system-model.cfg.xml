<?xml version="1.0" encoding="UTF-8"?>
<system-model xmlns="http://docs.openrepose.org/repose/system-model/v2.0">
    <repose-cluster id="cluster1">
        <nodes>
            <node id="node1" hostname="localhost" http-port="${reposePort}"/>
        </nodes>

        <filters>
            <filter name="derp"/>
        </filters>

        <destinations>
            <endpoint id="deproxy" protocol="http" hostname="localhost" root-path="/" port="${targetPort}"
                      default="true"/>
        </destinations>
    </repose-cluster>
</system-model>


<?xml version="1.0" encoding="UTF-8"?>

<system-model xmlns="http://docs.rackspacecloud.com/repose/system-model/v2.0">
  <repose-cluster id="repose">

    <nodes>
      <node id="config-test" hostname="localhost" http-port="${reposePort}"/>
    </nodes>

    <filters>
        <filter name="header-normalization" />
        <filter name="header-normalization" uri-regex="/secondary/.*" configuration="header-normalization-secondary.cfg.xml" />
        <filter name="header-normalization" uri-regex="/tertiary/.*" configuration="header-normalization-tertiary.cfg.xml" />
    </filters>

    <destinations>
      <endpoint id="target" protocol="http" hostname="${target_hostname}" port="${targetPort}" root-path="/" default="true"/>
    </destinations>

  </repose-cluster>
</system-model>

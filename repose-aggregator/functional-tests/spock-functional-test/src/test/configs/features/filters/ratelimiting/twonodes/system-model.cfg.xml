<?xml version="1.0" encoding="UTF-8"?>

<system-model xmlns="http://docs.rackspacecloud.com/repose/system-model/v2.0">
  <repose-cluster id="repose">

    <nodes>
      <node id="dd-node-1" hostname="localhost" http-port="${reposePort}"/>
      <!-- TODO use a dynamic port for these nodes -->
      <node id="dd-node-2" hostname="localhost" http-port="8889"/>
    </nodes>

    <filters>
      <filter name="dist-datastore" />
      <filter name="rate-limiting" />
    </filters>

    <destinations>
        <endpoint id="target" protocol="http" hostname="localhost" root-path="/" port="${targetPort}" default="true" />
    </destinations>

  </repose-cluster>
</system-model>

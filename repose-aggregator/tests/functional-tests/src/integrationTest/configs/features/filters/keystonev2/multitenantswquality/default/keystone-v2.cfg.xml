<?xml version="1.0" encoding="UTF-8"?>
<keystone-v2 xmlns="http://docs.openrepose.org/repose/keystone-v2/v1.0">
    <cache>
        <timeouts>
            <token>600000</token>
            <group>600000</group>
        </timeouts>
    </cache>
    <tenant-handling send-all-tenant-ids="true">
        <validate-tenant enable-legacy-roles-mode="true">
            <header-extraction-name>X-Expected-Tenant</header-extraction-name>
        </validate-tenant>
        <send-tenant-id-quality/>
    </tenant-handling>

    <pre-authorized-roles>
        <role>Racker</role>
    </pre-authorized-roles>

    <identity-service username="admin_username"
                      password="admin_password"
                      uri="http://localhost:${identityPort}"
            />
</keystone-v2>

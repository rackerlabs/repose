<?xml version="1.0" encoding="UTF-8"?>

<highly-efficient-record-processor xmlns="http://docs.openrepose.org/repose/highly-efficient-record-processor/v1.0"
                                   pre-filter-logger-name="highly-efficient-record-processor-pre-Logger"
                                   post-filter-logger-name="highly-efficient-record-processor-post-Logger"
                                   service-code="repose" region="USA" data-center="DFW">
    <template crush="true">
        {
        "GUID" : "{{guid}}",
        "ServiceCode" : "{{serviceCode}}",
        "Region" : "{{region}}",
        "DataCenter" : "{{dataCenter}}",
        "Timestamp" : "{{timestamp}}",
        "Request" : {
        "Method" : "{{requestMethod}}",
        "URL" : "{{requestURL}}",
        "UserAgent" : "{{UserAgent }} ",
        "QueryString" : "{{requestQueryString}}",
        "Parameters" : { {{#each parameters}}
        {{#if @index}},{{/if}}"{{key}}" : [{{#each value}}{{#if @index}},{{/if}}"{{{.}}}"{{/each}}]
        {{/each}} },
        "UserName" : "{{userName}}",
        "ImpersonatorName" : "{{impersonatorName}}",
        "ProjectID" : [ {{#each projectID}}
        {{#if @index}},{{/if}}"{{.}}"
        {{/each}} ],
        "Roles" : [ {{#each roles}}
        {{#if @index}},{{/if}}"{{.}}"
        {{/each}} ],
        "UserAgent" : "{{userAgent}}"
        },
        "Response" : {
        "Code" : {{responseCode}},
        "Message" : "{{responseMessage}}"
        },
        "MethodLabel" : "{{methodLabel}}"
        }
    </template>
</highly-efficient-record-processor>

        <node id="node1" hostname="localhost" http-port="${reposePort}"/>
    </nodes>

    <filters>
        <filter name="scripting" configuration="scripting1.cfg.xml"/>
        <filter name="scripting" configuration="scripting2.cfg.xml"/>

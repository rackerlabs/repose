<?xml version="1.0" encoding="UTF-8"?>

<system-model xmlns="http://docs.openrepose.org/repose/system-model/v2.0"
              rewrite-host-header="false">
    <nodes>
        <node id="simple-node" hostname="localhost" http-port="${reposePort}"/>
    </nodes>

    <filters>
        <filter name="ip-user"/>
    </filters>


    <destinations>
        <endpoint id="target" protocol="http" hostname="${targetHostname}" root-path="/" port="${targetPort}"
                  default="true"/>
    </destinations>
</system-model>

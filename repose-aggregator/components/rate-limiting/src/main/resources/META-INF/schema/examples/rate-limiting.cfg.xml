<?xml version="1.0" encoding="UTF-8"?>
<rate-limiting datastore="distributed/hash-ring" xmlns="http://docs.rackspacecloud.com/repose/rate-limiting/v1.0">
  <request-endpoint uri-regex="/service/limits/" include-absolute-limits="true"/>
  <limit-group id="customer-limits " groups="customer" default="true">
    <limit uri="/service/*" uri-regex="/service/([\d^/]*)/.*" http-methods="GET" unit="SECOND" value="1"/>
    <limit uri="/service/*" uri-regex="/service/([\d^/]*)/.*" http-methods="DELETE" unit="MINUTE" value="5"/>
    <limit uri="/service/*" uri-regex="/service/([\d^/]*)/.*" http-methods="PUT" unit="HOUR" value="15"/>
    <limit uri="/service/*" uri-regex="/service/([\d^/]*)/.*" http-methods="POST" unit="DAY" value="2"/>
  </limit-group>
  <limit-group id="admin-limits" groups="admin">
    <limit uri="/service/admin/*" uri-regex="/service/admin/(.*)" http-methods="GET POST PUT DELETE" unit="SECOND" value="1"/>
  </limit-group>
</rate-limiting>

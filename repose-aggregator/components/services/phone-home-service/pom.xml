<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>services-pom</artifactId>
        <groupId>org.openrepose</groupId>
        <version>8.0.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <name>Repose Services - Phone Home Service</name>
    <artifactId>phone-home-service</artifactId>
    <packaging>jar</packaging>

    <description>
        A service which collects Repose usage data such as the host Repose is running on, the filter chain being run,
        and more.

        This implementation sends data serialized as JSON to a data collection service.
    </description>

    <properties>
        <sonar.jacoco.itReportPath>${project.basedir}/../../../../target/jacoco-it.exec</sonar.jacoco.itReportPath>
    </properties>

    <dependencies>
        <!-- Scala Language -->
        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-library</artifactId>
        </dependency>

        <!-- ScalaTest -->
        <dependency>
            <groupId>org.scalatest</groupId>
            <artifactId>scalatest_${scala.MajDotMin}</artifactId>
        </dependency>

        <!-- LazyLogging -->
        <dependency>
            <groupId>com.typesafe.scala-logging</groupId>
            <artifactId>scala-logging-slf4j_${scala.MajDotMin}</artifactId>
        </dependency>

        <!-- Play JSON -->
        <dependency>
            <groupId>com.typesafe.play</groupId>
            <artifactId>play-json_${scala.MajDotMin}</artifactId>
        </dependency>

        <!-- @Value -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-beans</artifactId>
        </dependency>

        <!-- UpdateListener, ReposeSpringProperties -->
        <dependency>
            <groupId>org.openrepose</groupId>
            <artifactId>core-service-api</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- ServiceClientResponse -->
        <dependency>
            <groupId>org.openrepose</groupId>
            <artifactId>commons-utilities</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- AkkaServiceClient -->
        <dependency>
            <groupId>org.openrepose</groupId>
            <artifactId>akka-http-client-service-api</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- MediaType -->
        <dependency>
            <groupId>com.sun.jersey</groupId>
            <artifactId>jersey-server</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
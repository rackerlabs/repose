<xs:schema targetNamespace="http://docs.openrepose.org/repose/openapivalidator/v1.0"
           xmlns="http://docs.openrepose.org/repose/openapivalidator/v1.0"
           xmlns:html="http://www.w3.org/1999/xhtml"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified">

    <!-- Elements -->
    <xs:element name="open-api-validator" type="OpenApiValidatorConfig"/>

    <!-- Types -->
    <xs:complexType name="OpenApiValidatorConfig">
        <xs:annotation>
            <xs:documentation>
                <html:p>
                    The root config type for the OpenAPI Validator filter configuration file.
                </html:p>
            </xs:documentation>
        </xs:annotation>

        <xs:attribute name="href" type="xs:anyURI" use="required">
            <xs:annotation>
                <xs:documentation>
                    <html:p>
                        A URI reference to the root OpenAPI document.
                    </html:p>
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>
</xs:schema>

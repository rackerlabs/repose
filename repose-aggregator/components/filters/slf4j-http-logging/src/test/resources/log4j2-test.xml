<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="STDOUT">
            <PatternLayout pattern="%d %-4r [%t] %-5p %c - %m%n"/>
        </Console>
        <List name="List0"/>
        <List name="List1"/>
        <List name="List2"/>
        <List name="List3"/>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="STDOUT"/>
        </Root>
        <Logger name="Logger0" level="info">
            <AppenderRef ref="List0"/>
        </Logger>
        <Logger name="Logger1" level="info">
            <AppenderRef ref="List1"/>
        </Logger>
        <Logger name="Logger2" level="info">
            <AppenderRef ref="List2"/>
        </Logger>
        <Logger name="Logger3" level="info">
            <AppenderRef ref="List3"/>
        </Logger>
        <Logger name="com.sun.jersey" level="off"/>
        <Logger name="net.sf.ehcache" level="error"/>
        <Logger name="org.apache" level="warn"/>
        <Logger name="org.eclipse.jetty" level="off"/>
        <Logger name="org.openrepose" level="debug"/>
        <Logger name="org.springframework" level="warn"/>
        <Logger name="intrafilter-logging" level="info"/>
    </Loggers>
</Configuration>

<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.rackspace.repose.installation.rpm</groupId>
        <artifactId>rpm</artifactId>
        <version>7.0.0-SNAPSHOT</version>
    </parent>

    <groupId>com.rackspace.repose.installation.rpm.war</groupId>
    <artifactId>repose-war</artifactId>

    <name>Repose - Installation ROOT.WAR RPM</name>

    <description>
        Module for the ROOT.WAR RPM.
    </description>

    <packaging>pom</packaging>

    <profiles>
        <profile>
            <id>build-system-packages</id>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-web-application-war</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>com.rackspace.papi.core</groupId>
                                            <artifactId>web-application</artifactId>
                                            <version>${project.version}</version>
                                            <type>war</type>
                                        </artifactItem>
                                    </artifactItems>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <overWriteReleases>false</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>rpm-maven-plugin</artifactId>

                        <configuration>
                            <!-- WARNING!!!! DON"T EVER CHANGE THIS NAME.  Ops uses this in Puppet to refer to this RPM.-->
                            <name>repose-war</name>

                            <!-- The war file -->
                            <mappings>
                                <mapping>
                                    <directory>/usr/share/repose/</directory>
                                    <sources>
                                        <source>
                                            <location>
                                                ${project.build.directory}/web-application-${project.version}.war
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>

                                <!-- The /var/log/repose directory -->
                                <mapping>
                                    <directory>/var/log/repose/</directory>
                                    <username>repose</username>
                                    <groupname>repose</groupname>
                                    <filemode>770</filemode>
                                </mapping>

                                <!-- The /var/repose directory -->
                                <mapping>
                                    <directory>/var/repose/</directory>
                                    <username>repose</username>
                                    <groupname>repose</groupname>
                                    <filemode>770</filemode>
                                </mapping>

                                <!-- The logrotate script -->
                                <mapping>
                                    <directory>/etc/logrotate.d</directory>
                                    <directoryIncluded>false</directoryIncluded>
                                    <filemode>644</filemode>
                                    <sources>
                                        <source>
                                            <location>
                                                src/rpm/etc/logrotate.d/repose
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>

                                <!-- The sample configuration files for the filters -->
                                <mapping>
                                    <directory>/etc/repose/</directory>
                                    <username>repose</username>
                                    <groupname>repose</groupname>
                                    <filemode>770</filemode>
                                    <configuration>noreplace</configuration>
                                    <sources>
                                        <source>
                                            <location>
                                                ${basedir}/../../configs/core
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>

                                <!-- This adds the license file on installation.-->
                                <mapping>
                                    <directory>/usr/share/doc/repose/${project.artifactId}/</directory>
                                    <username>repose</username>
                                    <groupname>repose</groupname>
                                    <configuration>noreplace</configuration>
                                    <directoryIncluded>false</directoryIncluded>
                                    <filemode>770</filemode>
                                    <sources>
                                        <source>
                                            <location>
                                                ${basedir}/../../../../LICENSE.txt
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>

                            </mappings>

                            <requires>
                                <require>java &gt;= 1.7.0</require>
                            </requires>

                            <provides>
                                <provide>repose</provide>
                            </provides>

                            <preinstallScriptlet>
                                <script>
                                    #!/bin/sh
                                    CONFIG_DIR=/etc/repose
                                    SYSTEM_MODEL=$CONFIG_DIR/system-model.cfg.xml

                                    if [ -f $SYSTEM_MODEL ]
                                    then
                                        #Detects if the Dist-Datastore filter is present in the system-model.cfg.xml file. If the filter is an active component then this installation will fail.
                                        if cat $SYSTEM_MODEL | sed '/<!--.*-->/d'| sed '/<!--/,/-->/d' | grep 'filter.*dist-datastore'
                                        then
                                            echo "Unable to upgrade. system-model.cfg.xml file contains the deprecated dist-datastore filter. Please remove and re-run upgrade. For more information on the upgrade:  https://repose.atlassian.net/wiki/display/REPOSE/Release+Notes#ReleaseNotes-Release3.0.0(InProgress:UpdatetoJava1.7,RemoveDDFilter,ModularizeDD,BugFixes)"
                                            exit 1
                                        else
                                            getent group  repose >> /dev/null 2>&amp;1 || groupadd -r repose
                                            getent passwd repose >> /dev/null 2>&amp;1 || useradd -r -g repose -s /sbin/nologin -d /usr/share/lib/repose -c "Repose" repose
                                            exit 0
                                        fi
                                    fi
                                </script>
                            </preinstallScriptlet>

                            <group>Applications/Internet</group>

                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>

<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.rackspace.repose.installation.rpm</groupId>
        <artifactId>rpm</artifactId>
        <version>7.0.0-SNAPSHOT</version>
    </parent>

    <groupId>com.rackspace.repose.installation.rpm.ug.valve</groupId>
    <artifactId>ug-repose-valve</artifactId>

    <name>Repose - Installation Utility Grid Valve RPM</name>

    <description>
        Module for the Utility Grid Valve RPM.
    </description>

    <packaging>pom</packaging>

    <profiles>
        <profile>
            <id>build-system-packages</id>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-repose-valve-launcher-jar</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.openrepose.valve</groupId>
                                            <artifactId>valve-launcher</artifactId>
                                            <version>${project.version}</version>
                                            <type>jar</type>
                                            <!-- TODO: This should not be necessary as the actual artifact ID should be used.-->
                                            <destFileName>servo.jar</destFileName>
                                        </artifactItem>
                                    </artifactItems>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <overWriteReleases>false</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>

                            <execution>
                                <id>copy-jetty-runner</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.eclipse.jetty</groupId>
                                            <artifactId>jetty-runner</artifactId>
                                            <version>${jetty.version}</version>
                                            <type>jar</type>
                                        </artifactItem>
                                    </artifactItems>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <overWriteReleases>false</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>rpm-maven-plugin</artifactId>
                        <configuration>

                            <name>ug-repose-valve</name>
                            <mappings>
                                <!-- The jar file -->
                                <mapping>
                                    <directory>/usr/share/repose</directory>
                                    <filemode>755</filemode>
                                    <sources>
                                        <source>
                                            <location>
                                                <!-- TODO: The actual artifact ID should be used.
                                                ${project.build.directory}/valve-launcher-${project.version}.jar-->
                                                ${project.build.directory}/servo.jar
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>

                                <!-- The jetty file -->
                                <mapping>
                                    <directory>/usr/share/repose</directory>
                                    <filemode>644</filemode>
                                    <sources>
                                        <source>
                                            <location>
                                                ${project.build.directory}/jetty-runner-${jetty.version}.jar
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>

                                <!-- The clean up script -->
                                <mapping>
                                    <directory>/usr/bin</directory>
                                    <filemode>755</filemode>
                                    <sources>
                                        <source>
                                            <location>
                                                ${basedir}/../../bash/clean-repose-deploy
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>

                                <!-- The start script -->
                                <mapping>
                                    <directory>/etc/init.d</directory>
                                    <directoryIncluded>false</directoryIncluded>
                                    <filemode>755</filemode>
                                    <sources>
                                        <source>
                                            <location>
                                                ${basedir}/../../configs/etc/init.d/ug-repose-valve
                                            </location>
                                            <destination>
                                                repose-valve
                                            </destination>
                                        </source>
                                    </sources>
                                </mapping>

                                <!-- The config file -->
                                <mapping>
                                    <directory>/etc/repose/</directory>
                                    <directoryIncluded>false</directoryIncluded>
                                    <filemode>644</filemode>
                                    <sources>
                                        <source>
                                            <location>
                                                ${basedir}/../../configs/etc/repose/ug-repose-valve.conf
                                            </location>
                                            <destination>
                                                repose-valve.conf
                                            </destination>
                                        </source>
                                    </sources>
                                </mapping>

                                <!-- This adds the license file on installation.-->
                                <mapping>
                                    <directory>/usr/share/doc/repose/${project.artifactId}/</directory>
                                    <configuration>noreplace</configuration>
                                    <directoryIncluded>false</directoryIncluded>
                                    <filemode>444</filemode>
                                    <sources>
                                        <source>
                                            <location>
                                                ${basedir}/../../../../LICENSE.txt
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>

                            </mappings>

                            <requires>
                                <require>repose</require>
                                <require>daemonize</require>
                            </requires>

                            <group>Applications/Internet</group>

                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>

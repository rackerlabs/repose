<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.rackspace.repose.installation.rpm</groupId>
        <artifactId>rpm</artifactId>
        <version>6.2.0.0-SNAPSHOT</version>
    </parent>

    <groupId>com.rackspace.repose.installation.rpm.cli-utils</groupId>
    <artifactId>repose-cli-utils</artifactId>

    <name>Repose - Installation Cloud Integration CLI-Utilities RPM</name>

    <description>
        Module for the CLI-Utils RPM.
    </description>

    <packaging>pom</packaging>

    <profiles>
        <profile>
            <id>build-system-packages</id>

            <build>
                <plugins>
                    <plugin>
                        <groupId>pl.project13.maven</groupId>
                        <artifactId>git-commit-id-plugin</artifactId>
                    </plugin>

                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>properties-maven-plugin</artifactId>
                    </plugin>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-cli-utils-jar</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>com.rackspace.papi.components</groupId>
                                            <artifactId>cli-utils</artifactId>
                                            <version>${project.version}</version>
                                            <type>jar</type>
                                            <!-- TODO: This should not be necessary as the actual artifact ID should be used.
                                            <destFileName>cli-utils-${project.version}.jar</destFileName-->
                                            <destFileName>repose-cli.jar</destFileName>
                                        </artifactItem>
                                    </artifactItems>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <overWriteReleases>false</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>rpm-maven-plugin</artifactId>

                        <configuration>
                            <name>repose-cli-utils</name>

                            <mappings>
                                <!-- The JAR file -->
                                <mapping>
                                    <directory>
                                        /usr/share/repose
                                    </directory>
                                    <filemode>555</filemode>

                                    <sources>
                                        <source>
                                            <location>
                                                <!-- TODO: The actual artifact ID should be used.
                                                ${project.build.directory}/cli-utils-${project.version}.jar-->
                                                ${project.build.directory}/repose-cli.jar
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>

                                <!-- The dd-remove script -->
                                <mapping>
                                    <directory>
                                        /usr/bin
                                    </directory>
                                    <filemode>755</filemode>

                                    <sources>
                                        <source>
                                            <location>
                                                ${basedir}/../../bash/dd-remove
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>

                                <!-- The clean up script -->
                                <mapping>
                                    <directory>
                                        /usr/bin
                                    </directory>
                                    <filemode>755</filemode>

                                    <sources>
                                        <source>
                                            <location>
                                                ${basedir}/../../bash/clean-repose-deploy
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>

                                <!--The git.properties file -->
                                <mapping>
                                    <directory>
                                        /usr/share/doc/${project.artifactId}
                                    </directory>
                                    <configuration>noreplace</configuration>
                                    <directoryIncluded>false</directoryIncluded>
                                    <filemode>444</filemode>
                                    <sources>
                                        <source>
                                            <location>
                                                ${basedir}/target/git.properties
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>

                                <!--This adds the license file on installation.-->
                                <mapping>
                                    <directory>
                                        /usr/share/doc/${project.artifactId}/
                                    </directory>
                                    <configuration>noreplace</configuration>
                                    <directoryIncluded>false</directoryIncluded>
                                    <filemode>444</filemode>
                                    <sources>
                                        <source>
                                            <location>
                                                ${basedir}/../../../../LICENSE.txt
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>
                            </mappings>

                            <obsoletes>
                                <obsolete>cli-utils</obsolete>
                            </obsoletes>

                            <requires>
                                <require>java &gt;= 1.7.0</require>
                                <require>repose-${project.version}</require>
                            </requires>

                            <group>Applications/Internet</group>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>

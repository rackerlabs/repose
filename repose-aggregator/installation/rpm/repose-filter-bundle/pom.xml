<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.openrepose</groupId>
        <artifactId>rpm</artifactId>
        <version>7.0.1.0-SNAPSHOT</version>
    </parent>

    <name>Repose - Installation Filter Bundle RPM</name>
    <artifactId>repose-rpm-filter-bundle</artifactId>
    <packaging>pom</packaging>

    <description>
        Module for the Filter Bundle RPM.
    </description>

    <properties>
        <artifactName>repose-filter-bundle</artifactName>
    </properties>

    <profiles>
        <profile>
            <id>build-system-packages</id>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-filter-bundle-ear</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.openrepose</groupId>
                                            <artifactId>filter-bundle</artifactId>
                                            <version>${project.version}</version>
                                            <type>ear</type>
                                        </artifactItem>
                                    </artifactItems>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <overWriteReleases>false</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>rpm-maven-plugin</artifactId>
                        <configuration>
                            <name>${artifactName}</name>

                            <mappings>
                                <!-- The filters archive. -->
                                <mapping>
                                    <directory>
                                        /usr/share/repose/filters
                                    </directory>
                                    <directoryIncluded>false</directoryIncluded>
                                    <username>root</username>
                                    <groupname>root</groupname>
                                    <filemode>555</filemode>
                                    <sources>
                                        <source>
                                            <location>
                                                ${project.build.directory}/filter-bundle-${project.version}.ear
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>

                                <!-- The sample configuration files for the filters. -->
                                <mapping>
                                    <directory>
                                        /etc/repose
                                    </directory>
                                    <directoryIncluded>false</directoryIncluded>
                                    <username>
                                        repose
                                    </username>
                                    <groupname>
                                        repose
                                    </groupname>
                                    <filemode>640</filemode>
                                    <configuration>noreplace</configuration>
                                    <sources>
                                        <source>
                                            <location>
                                                <!-- This grabs all the config files in configs directory -->
                                                ${basedir}/../../configs/filters
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>

                                <!--The git.properties file -->
                                <mapping>
                                    <directory>
                                        /usr/share/doc/${artifactName}
                                    </directory>
                                    <configuration>noreplace</configuration>
                                    <directoryIncluded>false</directoryIncluded>
                                    <username>root</username>
                                    <groupname>root</groupname>
                                    <filemode>444</filemode>
                                    <sources>
                                        <source>
                                            <location>
                                                ${basedir}/target/git.properties
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>

                                <!-- This adds the license file on installation. -->
                                <mapping>
                                    <directory>
                                        /usr/share/doc/${artifactName}
                                    </directory>
                                    <configuration>noreplace</configuration>
                                    <directoryIncluded>false</directoryIncluded>
                                    <username>root</username>
                                    <groupname>root</groupname>
                                    <filemode>444</filemode>
                                    <sources>
                                        <source>
                                            <location>
                                                ${basedir}/../../../../LICENSE.txt
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>
                            </mappings>

                            <requires>
                                <require>java &gt;= 1.7.0</require>
                                <require>repose = ${project.version}</require>
                            </requires>

                            <obsoletes>
                                <obsolete>
                                    repose-filters
                                </obsolete>
                            </obsoletes>

                            <group>Applications/Internet</group>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>

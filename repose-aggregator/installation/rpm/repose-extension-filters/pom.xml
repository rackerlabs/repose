<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.rackspace.repose.installation.rpm</groupId>
        <artifactId>rpm</artifactId>
        <version>7.0.0-SNAPSHOT</version>
    </parent>

    <groupId>com.rackspace.repose.installation.rpm.filters.extensions</groupId>
    <artifactId>repose-extension-filters</artifactId>

    <name>Repose - Installation Extension Filters RPM</name>

    <description>
        Module for the Extension Filters Bundle RPM.
    </description>

    <packaging>pom</packaging>

    <profiles>
        <profile>
            <id>build-system-packages</id>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-extensions-filter-bundle-ear</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>com.rackspace.papi.components.extensions</groupId>
                                            <artifactId>extensions-filter-bundle</artifactId>
                                            <version>${project.version}</version>
                                            <type>ear</type>
                                        </artifactItem>
                                    </artifactItems>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <overWriteReleases>false</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>rpm-maven-plugin</artifactId>

                        <configuration>
                            <!-- WARNING!!!! DON"T EVER CHANGE THIS NAME.  Ops uses this in Puppet to refer to this RPM.-->
                            <name>repose-extension-filters</name>

                            <mappings>
                                <!-- The jar file -->
                                <mapping>
                                    <directory>/usr/share/repose/filters</directory>
                                    <username>repose</username>
                                    <groupname>repose</groupname>
                                    <filemode>644</filemode>

                                    <sources>
                                        <source>
                                            <location>
                                                ${project.build.directory}/extensions-filter-bundle-${project.version}.ear
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>

                                <!-- The filters directory -->
                                <mapping>
                                    <directory>/usr/share/repose/filters</directory>
                                    <filemode>555</filemode>
                                    <username>repose</username>
                                    <groupname>repose</groupname>
                                </mapping>

                                <!-- The sample configuration files for the filters -->
                                <mapping>
                                    <directory>/etc/repose/</directory>
                                    <username>repose</username>
                                    <groupname>repose</groupname>
                                    <configuration>noreplace</configuration>
                                    <directoryIncluded>false</directoryIncluded>
                                    <filemode>644</filemode>

                                    <sources>
                                        <source>
                                            <location>
                                                ${basedir}/../../configs/extensions
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>

                                <!-- This adds the license file on installation.-->
                                <mapping>
                                    <directory>/usr/share/doc/repose/${project.artifactId}/</directory>
                                    <configuration>noreplace</configuration>
                                    <directoryIncluded>false</directoryIncluded>
                                    <filemode>444</filemode>
                                    <sources>
                                        <source>
                                            <location>
                                                ${basedir}/../../../../LICENSE.txt
                                            </location>
                                        </source>
                                    </sources>
                                </mapping>

                            </mappings>

                            <requires>
                                <require>repose-filters</require>
                            </requires>

                            <group>Applications/Internet</group>

                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>

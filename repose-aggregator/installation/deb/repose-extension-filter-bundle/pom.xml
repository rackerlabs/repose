<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.rackspace.repose.installation.deb</groupId>
        <artifactId>deb</artifactId>
        <version>6.2.0.0-SNAPSHOT</version>
    </parent>

    <groupId>com.rackspace.repose.installation.deb.filters.extensions</groupId>
    <artifactId>repose-extension-filter-bundle</artifactId>

    <name>Repose - Installation Extension Filter Bundle DEB</name>

    <description>
        Module for the Extension Filter Bundle DEB.
    </description>

    <packaging>deb</packaging>

    <profiles>
        <profile>
            <id>build-system-packages</id>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-extensions-filter-bundle-ear</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>com.rackspace.papi.components.extensions</groupId>
                                            <artifactId>extensions-filter-bundle</artifactId>
                                            <version>${project.version}</version>
                                            <type>ear</type>
                                        </artifactItem>
                                    </artifactItems>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <overWriteReleases>false</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.vafer</groupId>
                        <artifactId>jdeb</artifactId>

                        <executions>
                            <execution>
                                <configuration>
                                    <deb>[[buildDir]]/[[artifactId]]-[[version]].deb</deb>
                                    <timestamped>false</timestamped>

                                    <dataSet>
                                        <!-- The extensions archive -->
                                        <data>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>
                                                    /usr/share/repose/filters
                                                </prefix>
                                                <filemode>555</filemode>
                                            </mapper>
                                            <src>
                                                ${project.build.directory}/extensions-filter-bundle-${project.version}.ear
                                            </src>
                                        </data>

                                        <!--The git.properties file -->
                                        <data>
                                            <src>${basedir}/target/git.properties</src>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>/usr/share/doc/${project.artifactId}</prefix>
                                                <filemode>444</filemode>
                                            </mapper>
                                        </data>

                                        <!-- The sample configuration files for the filters -->
                                        <data>
                                            <type>directory</type>
                                            <includes>*.cfg.xml</includes>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>
                                                    /etc/repose
                                                </prefix>
                                                <user>
                                                    repose
                                                </user>
                                                <group>
                                                    repose
                                                </group>
                                                <filemode>640</filemode>
                                            </mapper>
                                            <src>${basedir}/../../configs/extensions</src>
                                        </data>

                                        <!-- This adds the license file on installation -->
                                        <data>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>
                                                    /usr/share/doc/${project.artifactId}
                                                </prefix>
                                                <filemode>444</filemode>
                                            </mapper>
                                            <src>
                                                ${basedir}/../../../../LICENSE.txt
                                            </src>
                                        </data>
                                    </dataSet>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>

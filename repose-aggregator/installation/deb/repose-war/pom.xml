<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.rackspace.repose.installation.deb</groupId>
        <artifactId>deb</artifactId>
        <version>7.0.0-SNAPSHOT</version>
    </parent>

    <groupId>com.rackspace.repose.installation.deb.war</groupId>
    <artifactId>repose-war</artifactId>

    <name>Repose - Installation ROOT.WAR DEB</name>

    <description>
        Module for the ROOT.WAR DEB.
    </description>

    <packaging>pom</packaging>

    <profiles>
        <profile>
            <id>build-system-packages</id>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-web-application-war</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>com.rackspace.papi.core</groupId>
                                            <artifactId>web-application</artifactId>
                                            <version>${project.version}</version>
                                            <type>war</type>
                                            <!-- TODO: This should not be necessary as the actual artifact ID should be used.-->
                                            <destFileName>repose-${project.version}.war</destFileName>
                                        </artifactItem>
                                    </artifactItems>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <overWriteReleases>false</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.vafer</groupId>
                        <artifactId>jdeb</artifactId>

                        <executions>
                            <execution>
                                <configuration>
                                    <deb>[[buildDir]]/[[artifactId]]-[[version]].deb</deb>
                                    <timestamped>true</timestamped>
                                    <dataSet>
                                        <!-- The /usr/share/repose directory. -->
                                        <data>
                                            <type>template</type>
                                            <paths>
                                                <path>
                                                    usr/share/repose
                                                </path>
                                            </paths>
                                            <mapper>
                                                <type>perm</type>
                                                <!-- TODO: Should probably be root/root -->
                                                <user>
                                                    repose
                                                </user>
                                                <group>
                                                    repose
                                                </group>
                                                <filemode>755</filemode>
                                            </mapper>
                                        </data>

                                        <!-- The WAR file. -->
                                        <data>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>
                                                    /usr/share/repose
                                                </prefix>
                                                <!-- TODO: Should probably be root/root -->
                                                <user>
                                                    repose
                                                </user>
                                                <group>
                                                    repose
                                                </group>
                                                <filemode>555</filemode>
                                            </mapper>
                                            <src>
                                                <!-- TODO: The actual artifact ID should be used.
                                                ${project.build.directory}/web-application-${project.version}.war-->
                                                ${project.build.directory}/repose-${project.version}.war
                                            </src>
                                        </data>

                                        <!-- The /var/repose directory. -->
                                        <!-- TODO: This should be moved to a more standard place like /var/cache/repose. -->
                                        <data>
                                            <type>template</type>
                                            <paths>
                                                <path>
                                                    var/repose
                                                </path>
                                            </paths>
                                            <mapper>
                                                <type>perm</type>
                                                <user>
                                                    repose
                                                </user>
                                                <group>
                                                    repose
                                                </group>
                                                <filemode>750</filemode>
                                            </mapper>
                                        </data>

                                        <!-- The /var/log/repose directory. -->
                                        <data>
                                            <type>template</type>
                                            <paths>
                                                <path>
                                                    var/log/repose
                                                </path>
                                            </paths>
                                            <mapper>
                                                <type>perm</type>
                                                <user>
                                                    repose
                                                </user>
                                                <group>
                                                    repose
                                                </group>
                                                <filemode>750</filemode>
                                            </mapper>
                                        </data>

                                        <!-- The logrotate script. -->
                                        <data>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>
                                                    /etc/logrotate.d
                                                </prefix>
                                                <filemode>644</filemode>
                                            </mapper>
                                            <src>
                                                ${basedir}/../../configs/etc/logrotate.d/repose
                                            </src>
                                        </data>

                                        <!-- The /etc/repose directory. -->
                                        <data>
                                            <type>template</type>
                                            <paths>
                                                <path>
                                                    etc/repose
                                                </path>
                                            </paths>
                                            <mapper>
                                                <type>perm</type>
                                                <user>
                                                    repose
                                                </user>
                                                <group>
                                                    repose
                                                </group>
                                                <!-- TODO: This does not set the permissions properly. -->
                                                <dirmode>770</dirmode>
                                                <filemode>770</filemode>
                                            </mapper>
                                        </data>

                                        <!-- The sample configuration files for the filters. -->
                                        <data>
                                            <type>directory</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>
                                                    /etc/repose
                                                </prefix>
                                                <user>
                                                    repose
                                                </user>
                                                <group>
                                                    repose
                                                </group>
                                                <filemode>640</filemode>
                                            </mapper>
                                            <src>
                                                ${basedir}/../../configs/core
                                            </src>
                                        </data>

                                        <!-- This adds the license file on installation. -->
                                        <data>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>
                                                    /usr/share/doc/${project.artifactId}
                                                </prefix>
                                                <filemode>444</filemode>
                                            </mapper>
                                            <src>
                                                ${basedir}/../../../../LICENSE.txt
                                            </src>
                                        </data>
                                    </dataSet>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>

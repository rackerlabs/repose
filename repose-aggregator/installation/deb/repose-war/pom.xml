<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.openrepose</groupId>
        <artifactId>deb</artifactId>
        <version>7.3.2.0-SNAPSHOT</version>
    </parent>

    <name>Repose - Installation ROOT.WAR DEB</name>
    <artifactId>repose-deb-war</artifactId>
    <packaging>deb</packaging>

    <description>
        Module for the ROOT.WAR DEB.
    </description>

    <properties>
        <artifactName>repose-war</artifactName>
    </properties>

    <profiles>
        <profile>
            <id>build-system-packages</id>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-web-application-war</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.openrepose</groupId>
                                            <artifactId>web-application</artifactId>
                                            <version>${project.version}</version>
                                            <type>war</type>
                                            <destFileName>ROOT.war</destFileName>
                                        </artifactItem>
                                    </artifactItems>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <overWriteReleases>false</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.vafer</groupId>
                        <artifactId>jdeb</artifactId>

                        <executions>
                            <execution>
                                <configuration>
                                    <deb>${project.build.directory}/${artifactName}_${version}.deb</deb>
                                    <timestamped>false</timestamped>
                                    <dataSet>
                                        <!-- The /usr/share/repose directory. -->
                                        <data>
                                            <type>template</type>
                                            <paths>
                                                <path>
                                                    usr/share/repose
                                                </path>
                                            </paths>
                                            <mapper>
                                                <type>perm</type>
                                                <dirmode>555</dirmode>
                                                <filemode>555</filemode>
                                            </mapper>
                                        </data>

                                        <!-- The /usr/share/repose/filters directory. -->
                                        <data>
                                            <type>template</type>
                                            <paths>
                                                <path>
                                                    usr/share/repose/filters
                                                </path>
                                            </paths>
                                            <mapper>
                                                <type>perm</type>
                                                <user>
                                                    repose
                                                </user>
                                                <group>
                                                    repose
                                                </group>
                                                <dirmode>755</dirmode>
                                                <filemode>755</filemode>
                                            </mapper>
                                        </data>

                                        <!-- The WAR file -->
                                        <data>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>
                                                    /usr/share/repose
                                                </prefix>
                                                <filemode>555</filemode>
                                            </mapper>
                                            <src>
                                                ${project.build.directory}/ROOT.war
                                            </src>
                                        </data>

                                        <!--The git.properties file -->
                                        <data>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>
                                                    /usr/share/doc/${artifactName}
                                                </prefix>
                                                <filemode>444</filemode>
                                            </mapper>
                                            <src>
                                                ${basedir}/target/git.properties
                                            </src>
                                        </data>

                                        <!-- The /var/repose directory. -->
                                        <!-- TODO: This should be moved to a more standard place like /var/cache/repose. -->
                                        <data>
                                            <type>template</type>
                                            <paths>
                                                <path>
                                                    var/repose
                                                </path>
                                            </paths>
                                            <mapper>
                                                <type>perm</type>
                                                <user>
                                                    repose
                                                </user>
                                                <group>
                                                    repose
                                                </group>
                                                <filemode>750</filemode>
                                            </mapper>
                                        </data>

                                        <!-- The /var/log/repose directory. -->
                                        <data>
                                            <type>template</type>
                                            <paths>
                                                <path>
                                                    var/log/repose
                                                </path>
                                            </paths>
                                            <mapper>
                                                <type>perm</type>
                                                <user>
                                                    repose
                                                </user>
                                                <group>
                                                    repose
                                                </group>
                                                <filemode>750</filemode>
                                            </mapper>
                                        </data>

                                        <!-- The logrotate script -->
                                        <data>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>
                                                    /etc/logrotate.d
                                                </prefix>
                                                <user>
                                                    repose
                                                </user>
                                                <group>
                                                    repose
                                                </group>
                                                <filemode>644</filemode>
                                            </mapper>
                                            <src>
                                                ${basedir}/../../configs/etc/logrotate.d/repose
                                            </src>
                                        </data>

                                        <!-- The /etc/repose directory -->
                                        <data>
                                            <type>template</type>
                                            <paths>
                                                <path>
                                                    etc/repose
                                                </path>
                                            </paths>
                                            <mapper>
                                                <type>perm</type>
                                                <user>
                                                    repose
                                                </user>
                                                <group>
                                                    repose
                                                </group>
                                                <!-- TODO: Jdeb is not setting these permissions correctly -->
                                                <dirmode>770</dirmode>
                                                <filemode>770</filemode>
                                            </mapper>
                                        </data>

                                        <!-- The sample configuration files -->
                                        <data>
                                            <type>directory</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>
                                                    /etc/repose
                                                </prefix>
                                                <user>
                                                    repose
                                                </user>
                                                <group>
                                                    repose
                                                </group>
                                                <filemode>640</filemode>
                                            </mapper>
                                            <src>
                                                ${basedir}/../../configs/core
                                            </src>
                                        </data>

                                        <!--This adds the license file on installation.-->
                                        <data>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>
                                                    /usr/share/doc/${artifactName}
                                                </prefix>
                                                <filemode>444</filemode>
                                            </mapper>
                                            <src>
                                                ${basedir}/../../../../LICENSE.txt
                                            </src>
                                        </data>

                                        <!--This adds the dependencies file on installation.-->
                                        <data>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>
                                                    /usr/share/doc/${artifactName}
                                                </prefix>
                                                <filemode>444</filemode>
                                            </mapper>
                                            <src>
                                                ${basedir}/../../../../CONTRIBUTORS.txt
                                            </src>
                                        </data>

                                        <!--This adds the dependencies file on installation.-->
                                        <data>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>
                                                    /usr/share/doc/${artifactName}
                                                </prefix>
                                                <filemode>444</filemode>
                                            </mapper>
                                            <src>
                                                ${basedir}/../../configs/docs/DEPENDENCIES.txt
                                            </src>
                                        </data>
                                    </dataSet>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>

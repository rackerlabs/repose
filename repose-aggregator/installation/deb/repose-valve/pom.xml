<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.rackspace.repose.installation.deb</groupId>
        <artifactId>deb</artifactId>
        <version>7.0.0-SNAPSHOT</version>
    </parent>

    <groupId>com.rackspace.repose.installation.deb.valve</groupId>
    <artifactId>repose-valve</artifactId>

    <name>Repose - Installation Valve DEB</name>

    <description>
        Module for the Valve DEB.
    </description>

    <packaging>pom</packaging>

    <profiles>
        <profile>
            <id>build-system-packages</id>

            <build>
                <plugins>
                    <plugin>
                        <groupId>pl.project13.maven</groupId>
                        <artifactId>git-commit-id-plugin</artifactId>
                    </plugin>

                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>properties-maven-plugin</artifactId>
                    </plugin>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-repose-valve-launcher-jar</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.openrepose.valve</groupId>
                                            <artifactId>valve-launcher</artifactId>
                                            <version>${project.version}</version>
                                            <type>jar</type>
                                        </artifactItem>
                                    </artifactItems>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <overWriteReleases>false</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>

                            <execution>
                                <id>copy-jetty-runner</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.eclipse.jetty</groupId>
                                            <artifactId>jetty-runner</artifactId>
                                            <version>${jetty.version}</version>
                                            <type>jar</type>
                                        </artifactItem>
                                    </artifactItems>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <overWriteReleases>false</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.vafer</groupId>
                        <artifactId>jdeb</artifactId>

                        <executions>
                            <execution>

                                <configuration>
                                    <deb>[[buildDir]]/[[artifactId]]-[[version]].deb</deb>
                                    <timestamped>true</timestamped>
                                    <dataSet>
                                        <!-- The jar file -->
                                        <data>
                                            <src>
                                                ${project.build.directory}/valve-launcher-${project.version}.jar
                                            </src>
                                            <dst>
                                                valve-launcher.jar
                                            </dst>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>/usr/share/repose</prefix>
                                                <filemode>644</filemode>
                                            </mapper>
                                        </data>

                                        <!-- The jetty file -->
                                        <data>
                                            <src>
                                                ${project.build.directory}/jetty-runner-${jetty.version}.jar
                                            </src>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>/usr/share/repose</prefix>
                                                <filemode>644</filemode>
                                            </mapper>
                                        </data>

                                        <!-- The clean up script -->
                                        <data>
                                            <src>
                                                ${basedir}/../../bash/clean-repose-deploy
                                            </src>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>/usr/local/bin</prefix>
                                                <filemode>755</filemode>
                                            </mapper>
                                        </data>

                                        <!-- The start script -->
                                        <data>
                                            <src>
                                                ${basedir}/../../configs/etc/init.d/deb-repose-valve
                                            </src>
                                            <dst>
                                                repose-valve
                                            </dst>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>/etc/init.d</prefix>
                                                <filemode>755</filemode>
                                            </mapper>
                                        </data>

                                        <!-- The config file -->
                                        <data>
                                            <src>
                                                ${basedir}/../../configs/etc/repose/deb-repose-valve.conf
                                            </src>
                                            <dst>
                                                repose-valve.conf
                                            </dst>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>/etc/repose/</prefix>
                                                <filemode>644</filemode>
                                            </mapper>
                                        </data>

                                        <!-- This adds the license file on installation.-->
                                        <data>
                                            <src>
                                                ${basedir}/../../../../LICENSE.txt
                                            </src>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>/usr/share/doc/repose/${project.artifactId}</prefix>
                                                <filemode>444</filemode>
                                            </mapper>
                                        </data>

                                        <!--The git.properties file -->
                                        <data>
                                            <src>${basedir}/target/git.properties</src>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>/usr/share/doc/repose-valve</prefix>
                                                <filemode>644</filemode>
                                            </mapper>
                                        </data>

                                    </dataSet>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
